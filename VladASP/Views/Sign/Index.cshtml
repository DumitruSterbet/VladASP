@model VladASP.Models.Client
@{
    ViewData["Title"] = "Logare";
}

<div class=" container" >
<div class="login-form-1 mt-5 rounded p-4" style="background-color: rgb(0, 0, 0, 0.4)">
    <h1>Logheaza-te</h1>
    <form id="login-form" class="text-left" novalidate="novalidate" asp-action="index" asp-controller="sign">
        <div class="main-login-form">
            <div class="login-group">

                <div class="form-group">
                    <label asp-for="Login" class="control-label">Login</label>
                    <input type="text" asp-for="Login" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Paswword</label>
                    <input type="text" asp-for="Password" class="form-control" />
                </div>

                <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>

            </div>
        </div>
        <div class="etc-login-form">
            <p>Nou user? <a asp-action="register">Creaza un nou account</a></p>
        </div>
    </form>
</div></div>
