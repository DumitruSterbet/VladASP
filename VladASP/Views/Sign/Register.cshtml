@model VladASP.Models.Client
@{
    ViewData["Title"] = "Adaugare client";
}


<div class="login-form-1">
    <h1>Inregistreaza-te</h1>
    <form id="login-form" class="text-left" novalidate="novalidate" asp-action="register" asp-controller="sign">
        <div class="main-login-form">
            <div class="login-group">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Numele</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Mobile" class="control-label">Telefon</label>
                    <input type="number" asp-for="Mobile" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Login</label>
                    <input type="text" asp-for="Login" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Paswword</label>
                    <input type="text" asp-for="Password" class="form-control" />
                </div>

                <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>

            </div>
        </div>
        <div class="etc-login-form">
            <p> <a asp-action="index"> Esti de acum inregistrat?</a></p>
        </div>
    </form>
</div>
