@model List<WithCityname>


@{
    ViewData["Tittle"] = "Oras favorit";
    Layout = "~/Views/Fly/Master.cshtml";
}
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia&effect=fire">
    <link rel=" stylesheet" href="~/css/showlist/textCod.css" />
</head>

    <div class=" mt-5 p-5 rounded" style="background-color:rgba(0,0,0,0.4)" >
        <form class="m-5 text-center" asp-controller="FLY" asp-action="Index">
            <p class="text-center" style="font-size:20px">
                <h1 class="text-light m-2" style="font-size:30px">Cauta dupa sursa</h1>
                <input class="rounded  border text-center m-2" type="text" name="SearchString" />
                <br />
                <input class="btn-danger rounded border text-center m-2" type="submit" value="Cauta" />
            </p>
        </form>

        @{ foreach (var el in Model)
            { <div class="row bg-white border rounded mt-4 p-2  ">
                    <div class="col-lg-2 mt-4 text-dark text-center  ">
                        <h6 style="  font-size:20px;      color: maroon;font-family:serif;
        font-weight: bold;
        transform: skew(-20deg,-20deg);transform-origin:30% 30%">
                            @el.Cod
                        </h6>
                        <h6 class="text-danger" style="font-size:20px;font-family:cursive">&#8364;@el.Price</h6>



                    </div>
                    <div class="col-lg-2 text-dark mt-3 ">
                        <h6 class="text-dark text-center" style="        font-size: 25px;
        font-family: cursive;
">
                            @el.Source
                        </h6>
                        <h6 class="text-center text-danger" style="font-size:12px">@el.DateSource</h6>

                    </div>
                    <div class="col-lg-4 text-dark text-center ">
                        <img class="" src="~/css/showlist/img/ruta.jpg" width="320" height="75" />

                    </div>
                    <div class="col-lg-2 text-dark mt-3 ">
                        <h6 class="text-dark text-center" style="font-size:25px;font-family:cursive"> @el.Destination</h6>
                        <h6 class="text-center text-danger" style="font-size:12px">@el.DataDest</h6>

                    </div>
                    <div class="col-lg-2 mt-4 text-right">
                        <a class="btn-danger p-2 pb-1 ml-4 mt-3 mb-3 border rounded" asp-action="orderbuy"
                           asp-controller="fly" asp-route-id="@el.Id">Cumpara</a>
                    </div>




                </div>}
        }

    </div>
