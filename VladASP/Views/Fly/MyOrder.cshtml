@model List<Flyght>
@{
    ViewData["Tittle"] = "Lista orderelor mele";
    Layout = "~/Views/Fly/Master.cshtml";
}
<div class="contaier justify-content-center  mt-5 rounded" style="background-color: rgba(0,0,0,0.4)">
    <hr class="my-4">
    <div class="row  mt-5 p-3 ">
        <div class="col-lg-4">
            <h3 class="text-white text-center">Codul biletului</h3>
        </div>
        <div class="col-lg-4">
            <h3 class="text-white text-center">Pretul</h3>
        </div>
        <div class="col-lg-4">
            <h3 class="text-white text-center">Data pornirii</h3>
        </div>
    </div>
    <hr class="my-4">
    @{foreach (var el in Model)
        {
            <div class="row  mt-2 p-3 ">
                <div class="col-lg-4">
                    <h5 class="text-light text-center">@el.Cod</h5>


                </div>
                <div class="col-lg-4">
                    <h5 class="text-center text-danger">&#8364;@el.Price</h5>


                </div>
                <div class="col-lg-4">
                    <h6 class="text-warning text-center">@el.DateSource</h6>


                </div>


            </div>
            <hr class="my-4">
        }
    }


</div>
